<%= link_to "Login", new_user_session_path, class: "login", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
<div class="sign-in-box dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
      <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <div class="forgot-pw">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"crypto-text" %><br />
        <% end %>
      </div>
    </div>
    <div class="crypto-button">
      <%= f.button :submit, "Log in", class: "crypto-text" %>
    </div>
  <% end %>
</div>
